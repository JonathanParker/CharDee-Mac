<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CardActivity"
    android:fitsSystemWindows="true">


    <!-- activity view -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/table_top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="40dp"
            android:background="#000000"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congratulations you have reached the bottom of the deck.  We didn't think this could happen... Your team will auto-advance, but everyone on your team will have to drink a glass of wine."
                android:textSize="25sp"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/auto_advance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "fine.."
                android:onClick="onAutoAdvanceClick"/>
        </LinearLayout>


        <com.lorentzos.flingswipe.SwipeFlingAdapterView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rotation_degrees="15.5" />

        <RelativeLayout
            android:id="@+id/try_swiping_container_RL"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/try_swiping_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:padding="10dp"
                android:layout_margin="30dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/try_swiping_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:text="Try swiping"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/try_swiping_subTV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:text="Hold image and swipe"
                    android:textColor="@color/light_gray"
                    android:textSize="30sp"
                    android:textStyle="italic"
                    android:textAlignment="center" />

            </LinearLayout>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/try_swiping_container"
                android:layout_marginTop="-15dp"
                android:layout_marginEnd="-15dp"
                app:backgroundTint="#ffffff"
                android:tint="@color/black"
                android:scaleType="center"
                android:src="@mipmap/ic_clear_white_24dp"
                android:layout_alignEnd="@+id/try_swiping_container"
                android:onClick="onSwipingInfoRemoveClick"/>


        </RelativeLayout>

    </FrameLayout>


</LinearLayout>